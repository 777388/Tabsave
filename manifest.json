// manifest.json
{
    "manifest_version": 2,
    "name": "Save Tabs",
    "description": "Saves all currently open tabs.",
    "version": "1.0",
    "browser_action": {
        "default_icon": "icon.jpg",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": [
        "tabs"
    ]
}